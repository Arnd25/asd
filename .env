UPLOAD_DIR=uploads
UPLOAD_MAX_SIZE=10485670  #10 mb
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/jpg

# Cors
CORS_ORIGIN=http://localhost:3000